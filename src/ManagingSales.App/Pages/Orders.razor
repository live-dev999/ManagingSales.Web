@page "/orders"

<w>Orders</w>

<h1>Orders</h1>
@if (Items == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in Items)
            {
                <tr>
                    <td>@forecast.Id.ToString()</td>
                    @*<td>@forecast.TemperatureC</td>
                        <td>@forecast.TemperatureF</td>
                        <td>@forecast.Summary</td>*@
                </tr>
            }
        </tbody>
    </table>
}

@code{
    [Inject]
    public IOrderService Service { get; set; }

    private List<OrderDto> Items { get; set; }

    protected override async Task OnInitializedAsync()
    {

        this.Items = await Service.GetAllAsync(System.Threading.CancellationToken.None);
    }
}



